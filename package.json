{
  "private": true,
  "scripts": {
    "dev": "concurrently 'yarn db:generate' 'next dev'",
    "dev:ts": "yarn dev && yarn ts:watch",
    "dev:clean": "yarn clean && yarn dev",
    "build": "yarn db:generate && next build",
    "build:analyze": "ANALYZE=true yarn build",
    "preview": "next build && next start",
    "start": "next start",
    "test": "echo \"No tests specified\" && exit 0",
    "test:watch": "echo \"No test runner configured\" && exit 0",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "ts": "tsc --noEmit --incremental",
    "ts:watch": "yarn ts --watch",
    "format": "prettier --check --ignore-path .prettierignore --ignore-path .gitignore .",
    "format:fix": "prettier --write --list-different --ignore-path .prettierignore --ignore-path .gitignore .",
    "clean": "rm -rf .next out build dist .eslintcache *.tsbuildinfo",
    "clean:all": "yarn clean && rm -rf node_modules .yarn/cache",
    "setup": "yarn install && yarn db:generate && yarn db:push && yarn db:seed",
    "check": "yarn lint && yarn ts && yarn build",
    "db:generate": "yarn drizzle:generate",
    "db:migrate": "yarn drizzle:migrate",
    "db:push": "yarn drizzle:push",
    "db:seed": "yarn drizzle:seed",
    "db:reset": "yarn drizzle:push && yarn drizzle:seed",
    "drizzle:generate": "yarn pnpify drizzle-kit generate",
    "drizzle:migrate": "yarn pnpify node -r ts-node/register src/db/migrate.ts",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "yarn pnpify drizzle-kit studio",
    "drizzle:seed": "yarn pnpify node -r ts-node/register src/db/seed.ts",
    "docker:drizzle:push": "drizzle-kit push",
    "docker:drizzle:seed": "node -r ts-node/register src/db/seed.ts",
    "drizzle:introspect": "yarn pnpify drizzle-kit introspect",
    "docker:dev": "docker compose up -d",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:stop": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:shell": "docker compose exec app sh",
    "postinstall": "echo 'Skipping postinstall in Docker build'"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.4",
    "@heroicons/react": "^2.2.0",
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^15.4.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@tailwindcss/typography": "^0.5.10",
    "@yarnpkg/pnpify": "^4.0.1",
    "acorn": "^8.11.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.36.0",
    "fetch-ponyfill": "^7.1.0",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.298.0",
    "next": "15.4.6",
    "next-auth": "5.0.0-beta.29",
    "next-mdx-remote": "^5.0.0",
    "pg": "^8.16.3",
    "react": "^18",
    "react-dom": "^18",
    "shadcn-ui": "^0.4.1",
    "sharp": "^0.33.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@next/eslint-plugin-next": "^15.4.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22",
    "@types/pg": "^8.15.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@yarnpkg/sdks": "^3.1.0",
    "autoprefixer": "^10.0.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.9.2"
}
